<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>vaadin-cdi-test</display-name>

	<context-param>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
		<description>Vaadin production mode</description>
	</context-param>

	<context-param>
		<param-name>resourceCacheTime</param-name>
		<param-value>3600</param-value>
	</context-param>

	<listener>
		<listener-class>com.vaadin.cdi.ContextDeployer</listener-class>
	</listener>

	<servlet>
		<servlet-name>PurchasesApplication</servlet-name>
		<servlet-class>com.vaadin.cdi.VaadinCDIApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>com.vaadin.purchases.presentation.PurchasesApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>PurchasesApplication</servlet-name>
		<url-pattern>/ostokset/*</url-pattern>
	</servlet-mapping>

</web-app>